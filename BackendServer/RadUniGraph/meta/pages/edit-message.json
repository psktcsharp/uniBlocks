{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "components": [
            {
              "class": "col-md-9",
              "components": [
                {
                  "name": "closeLabel",
                  "style": {
                    "fontWeight": "bold"
                  },
                  "text": "Item no longer available.",
                  "type": "label",
                  "visible": "${!canEdit}"
                }
              ],
              "name": "col0",
              "type": "col"
            },
            {
              "class": "col-md-3",
              "components": [
                {
                  "buttonStyle": "secondary",
                  "events": {
                    "click": [
                      {
                        "type": "close-popup"
                      }
                    ]
                  },
                  "icon": "",
                  "name": "closeButton",
                  "style": {
                    "marginBottom": "20px"
                  },
                  "text": "Close",
                  "type": "button",
                  "visible": "${!canEdit}"
                }
              ],
              "name": "col1",
              "type": "col"
            }
          ],
          "name": "row0",
          "style": {},
          "type": "row"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Content",
                              "component": "content",
                              "name": "contentLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "type": "textbox",
                              "name": "content",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${message.content}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "User",
                              "component": "SenderUserId",
                              "name": "SenderUserIdLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "data": "${getUsersResult}",
                              "textProperty": "Email",
                              "valueProperty": "UserId",
                              "placeholder": "Choose User",
                              "valueType": "int?",
                              "type": "dropdown",
                              "name": "SenderUserId",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${message.SenderUserId}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to update Message",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "UniSQL.updateMessage",
                        "parameters": [
                          {
                            "name": "MessageId",
                            "value": "${parameters.MessageId}"
                          },
                          {
                            "name": "Message",
                            "value": "${message}"
                          }
                        ],
                        "then": [
                          {
                            "type": "close-popup",
                            "result": "${message}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "itemType": "UniBlocksGraph.Models.UniSql.Message",
                  "data": "${message}",
                  "visible": "${message != null && canEdit}"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "canEdit",
        "type": "set",
        "value": "true",
        "valueType": "bool"
      },
      {
        "name": "UniSQL.getMessageByMessageId",
        "parameters": [
          {
            "name": "MessageId",
            "value": "${parameters.MessageId}"
          }
        ],
        "then": [
          {
            "name": "message",
            "type": "set",
            "value": "${result}",
            "valueType": "UniBlocksGraph.Models.UniSql.Message"
          }
        ],
        "error": [],
        "type": "invoke"
      },
      {
        "name": "UniSQL.getUsers",
        "parameters": [],
        "then": [
          {
            "name": "getUsersResult",
            "type": "set",
            "value": "${result}",
            "valueType": "IEnumerable<UniBlocksGraph.Models.UniSql.User>"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Edit Message",
  "layout": "Main",
  "access": [
    "Authenticated"
  ]
}