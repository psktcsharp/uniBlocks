@page "/services"
@layout MainLayout
@inherits UniBlocksGraph.Pages.ServicesComponent

@using Radzen
@using Radzen.Blazor
@using UniBlocksGraph.Models.UniSql
@using Microsoft.AspNetCore.Identity
@using UniBlocksGraph.Models
@using Microsoft.AspNetCore.Authorization
@inject IModalService Modal
@attribute [Authorize]
@code{

}

<RadzenContent Container="main">
    <ChildContent>
        <RadzenHeading Size="H1" Text="Services">
        </RadzenHeading>
        <div class="row">
            <div class="col-md-12">
                <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
                </RadzenButton>
                <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@(getServicesResult)" TItem="UniBlocksGraph.Models.UniSql.Service" RowSelect="@Grid0RowSelect">
                    <Columns>
                        <RadzenGridColumn TItem="UniBlocksGraph.Models.UniSql.Service" Context="uniBlocksGraphModelsUniSqlService" Property="AServiceId" Title="A Service Id">
                        </RadzenGridColumn>
                        <RadzenGridColumn TItem="UniBlocksGraph.Models.UniSql.Service" Context="uniBlocksGraphModelsUniSqlService" Property="ServiceName" Title="Service Name">
                        </RadzenGridColumn>
                        <RadzenGridColumn TItem="UniBlocksGraph.Models.UniSql.Service" Context="uniBlocksGraphModelsUniSqlService" Property="IsActive" Title="Is Active">
                        </RadzenGridColumn>
                        @*<RadzenGridColumn TItem="UniBlocksGraph.Models.UniSql.Service" Context="uniBlocksGraphModelsUniSqlService" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                            <Template Context="uniBlocksGraphModelsUniSqlService">
                                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) => GridDeleteButtonClick(args, uniBlocksGraphModelsUniSqlService))" @onclick:stopPropagation="true">
                                </RadzenButton>
                            </Template>
                        </RadzenGridColumn>*@
                        @if (SubIdForService != 0)
                        {
                            <RadzenGridColumn TItem="UniBlocksGraph.Models.UniSql.Service" Context="uniBlocksGraphModelsUniSqlService" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                                <Template Context="uniBlocksGraphModelsUniSqlService">
                                    <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="payment" Size="ButtonSize.Medium" Click="@(() => ShowPay(uniBlocksGraphModelsUniSqlService.AServiceId, SubIdForService))" class="btn btn-primary" @onclick:stopPropagation="true">

                                    </RadzenButton>
                                </Template>
                            </RadzenGridColumn>
                        }

                    </Columns>
                </RadzenGrid>
            </div>
        </div>
    </ChildContent>
</RadzenContent>
@code{
    void ShowPay(int serviceId,int subId)
    {
        var parameters = new ModalParameters();
        parameters.Add("ServiceId", serviceId);
        parameters.Add("SubId", subId);

        Modal.Show<Pay>
("Payment", parameters);
    }
}
